<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LivechatActivity">

    <!--  폰트 변경이 어려움  -->

    <EditText
        android:id="@+id/et_livechat_write"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="메시지를 입력하세요"
        android:fontFamily="@font/im_hyemin_bold"
        android:textColor="@color/zete"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_livechat_send"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/btn_livechat_send"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/btncolor"
        android:fontFamily="@font/im_hyemin_bold"
        android:text="보내기"
        android:textColor="@color/zete"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_livechat_write"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_livechat"
        android:layout_width="409dp"
        android:layout_height="541dp"
        app:layout_constraintBottom_toTopOf="@+id/et_livechat_write"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/im_hyemin_bold"
        android:gravity="center_vertical"
        android:text="실시간 채팅"
        android:textColor="@color/zete"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rcv_livechat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>