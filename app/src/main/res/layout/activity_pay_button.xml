<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayButtonActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/im_hyemin_bold"
        android:text="결제 정보 입력하기"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline36"
        app:layout_constraintEnd_toStartOf="@+id/guideline39"
        app:layout_constraintStart_toStartOf="@+id/guideline38"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_pay_button_cardnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:fontFamily="@font/im_hyemin_bold"
        android:hint="카드 번호"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/spinner2"
        app:layout_constraintStart_toStartOf="@+id/spinner2"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <EditText
        android:id="@+id/et_pay_button_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="만료일(일/년)"
        android:inputType="text"
        android:fontFamily="@font/im_hyemin_bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pay_button_cardnum"
        app:layout_constraintStart_toStartOf="@+id/et_pay_button_cardnum"
        app:layout_constraintTop_toBottomOf="@+id/et_pay_button_cardnum" />

    <EditText
        android:id="@+id/et_pay_button_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="이름"
        android:inputType="text"
        android:fontFamily="@font/im_hyemin_bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pay_button_expiry"
        app:layout_constraintStart_toStartOf="@+id/et_pay_button_expiry"
        app:layout_constraintTop_toBottomOf="@+id/et_pay_button_expiry" />

    <EditText
        android:id="@+id/et_pay_button_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="생년"
        android:inputType="text"
        android:fontFamily="@font/im_hyemin_bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pay_button_name"
        app:layout_constraintStart_toStartOf="@+id/et_pay_button_name"
        app:layout_constraintTop_toBottomOf="@+id/et_pay_button_name" />

    <EditText
        android:id="@+id/et_pay_button_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="월"
        android:inputType="text"
        android:fontFamily="@font/im_hyemin_bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pay_button_years"
        app:layout_constraintStart_toStartOf="@+id/et_pay_button_years"
        app:layout_constraintTop_toBottomOf="@+id/et_pay_button_years" />

    <EditText
        android:id="@+id/et_pay_button_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="일"
        android:inputType="text"
        android:fontFamily="@font/im_hyemin_bold"
        app:layout_constraintEnd_toEndOf="@+id/et_pay_button_month"
        app:layout_constraintStart_toStartOf="@+id/et_pay_button_month"
        app:layout_constraintTop_toBottomOf="@+id/et_pay_button_month" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/textview_yellow"
        android:entries="@array/card_list"
        android:fontFamily="@font/im_hyemin_bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline39"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline38"
        app:layout_constraintTop_toTopOf="@+id/guideline36" />

    <Button
        android:id="@+id/btn_pay_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/btncolor"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="등 록 하 기"
        android:fontFamily="@font/im_hyemin_bold"
        android:textColor="@color/zete"
        app:layout_constraintBottom_toTopOf="@+id/guideline37"
        app:layout_constraintEnd_toEndOf="@+id/et_pay_button_day"
        app:layout_constraintStart_toStartOf="@+id/et_pay_button_day"
        app:layout_constraintTop_toBottomOf="@+id/et_pay_button_day" />

</androidx.constraintlayout.widget.ConstraintLayout>