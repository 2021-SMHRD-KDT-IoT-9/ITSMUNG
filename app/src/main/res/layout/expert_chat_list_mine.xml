<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:background="@drawable/background_chat_main"
        android:fontFamily="@font/im_hyemin_bold"
        android:gravity="start|center_vertical"
        android:linksClickable="true"
        android:padding="10dp"
        android:text="안녕하세요. 소다견주님  \n ‣ 형태 : 딱딱한 토끼 똥   \n ‣ 색  :  검붉은색\n  🚨 소견 :  항문 질환 및 위장 출혈 의심 \n               빠른 시일 내  병원 내원을 권해드립니다."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="오후 13:23"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_message"
        app:layout_constraintEnd_toStartOf="@+id/tv_chat_message"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_message"
        app:layout_constraintVertical_bias="0.988" />

    <TextView
        android:id="@+id/tv_chat_isShown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="1"
        android:textColor="#FFBE3C"
        app:layout_constraintBottom_toBottomOf="@+id/tv_chat_date"
        app:layout_constraintEnd_toStartOf="@+id/tv_chat_date"
        app:layout_constraintTop_toTopOf="@+id/tv_chat_date" />
</androidx.constraintlayout.widget.ConstraintLayout>