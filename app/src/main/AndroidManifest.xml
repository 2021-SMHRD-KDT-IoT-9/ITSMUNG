            android:name=".DevicewifiActivity"
            android:exported="true" />
        <activity
            android:name=".CctvActivity"
            android:exported="false" />
        <activity
            android:name=".PayActivity"
            android:exported="false" />
        <activity
            android:name=".PayButtonActivity"
            android:exported="true" />
        <activity
            android:name=".PayCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".UserInfoActivity"
            android:exported="false" />
        <activity
            android:name=".DogPeaActivity"
            android:exported="false" />
        <activity
            android:name=".DogStoolActivity"
            android:exported="true" />
        <activity
            android:name=".DogJoinActivity"
            android:exported="true" />
        <activity
            android:name=".UserJoinActivity"
            android:exported="true" />
        <activity
            android:name=".UserLoginActivity"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>